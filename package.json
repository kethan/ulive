{
	"name": "ulive",
	"description": "Live reactive states",
	"version": "1.0.5",
	"source": "src/index.js",
	"type": "module",
	"types": "dist/index.d.ts",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"unpkg": "dist/index.min.js",
	"umd:main": "dist/index.umd.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/index.es.js",
			"umd": "./dist/index.umd.js",
			"require": "./dist/index.js",
			"import": "./dist/index.es.js",
			"default": "./dist/index.es.js"
		},
		"./fn": {
			"types": "./fn/index.d.ts",
			"browser": "./fn/index.es.js",
			"umd": "./fn/index.umd.js",
			"require": "./fn/index.js",
			"import": "./fn/index.es.js",
			"default": "./fn/index.es.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"test": "node src/test.js && node src/test.fn.js",
		"copy:dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist && copyfiles -u 1 \"src/**/*.d.ts\" fn",
		"build": "rollup --config rollup.config.js && npm run copy:dts"
	},
	"files": [
		"dist",
		"fn"
	],
	"devDependencies": {
		"@rollup/plugin-terser": "^0.4.4",
		"copyfiles": "^2.4.1",
		"rollup": "^4.20.0",
		"terser": "^5.15.0",
		"tst": "^7.1.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kethan/ulive.git"
	},
	"keywords": [
		"observable",
		"createeffect",
		"useeffect",
		"state",
		"computed",
		"ref",
		"atom",
		"computeds",
		"memo",
		"derivation",
		"behavior",
		"effect",
		"signal",
		"watch",
		"live",
		"reactive",
		"react",
		"preact"
	],
	"author": "Kethan Surana",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/kethan/index/issues"
	},
	"homepage": "https://github.com/kethan/index#readme",
	"browserslist": [
		"defaults",
		"not IE 11",
		"maintained node versions"
	]
}
